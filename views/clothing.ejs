<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Closet Inventory</title>

    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@700&display=swap" rel="stylesheet">

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/clothingStyle.css">

</head>

<body>
    <!-- Actual page content! -->
    <div class="container">
        <div class="section">
            <a class="btn-small waves-effect waves-light deep-purple" href="/">
                <i class="material-icons left">arrow_back</i>Return to Home Page
            </a>
            <h1>Closet inventory:</h1>
            <table>
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Color and Description</th>
                        <th>Place bought</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < inventory.length; i++) {%>
                    <tr>
                        <td><%= inventory[i].category %></td>
                        <td><%= inventory[i].colorDescription %></td>
                        <td><%= inventory[i].placeBought %></td>
                        <td><%= inventory[i].quantity %></td>
                        <td>
                            <img src="/images/<%=inventory[i].id%>.jpg" alt="blackjeans">
                        </td>
                        <td>
                            <a class="btn-small waves-effect waves-light cyan" href="/clothing/details/<%= inventory[i].id %>">
                                <i class="material-icons right">edit</i>Info/Edit</a>
                            <a class="btn-small waves-effect waves-light indigo" href="/clothing/details/<%=inventory[i].id %>/delete"><i
                                class="material-icons right">delete</i>Delete</a>
                        </td>
                    </tr>                
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="stuffAdd">
            <h1>Add items:</h1>
            <form method="post" action="/clothing">
                <div class="row">
                    <div class="input-field col s6">
                        <select id="categories" name="categories">
                          <option value="" disabled selected>Choose your category</option>
                          <option value="T-shirt">T-shirt</option>
                          <option value="Sweater">Sweater</option>
                          <option value="Formal shirt">Formal shirt</option>
                          <option value="Long sleeve shirt">Long sleeve shirt</option>
                          <option value="Sleeveless shirt/tank top">Sleeveless shirt/tank top</option>
                          <option value="Hoodie">Hoodie</option>
                          <option value="Shorts">Shorts</option>
                          <option value="Skirt">Skirt</option>
                          <option value="Jeans">Jeans</option>
                          <option value="Sweatpants">Sweatpants</option>
                          <option value="Coat">Coat</option>
                          <option value="Suit">Suit</option>
                          <option value="Tie">Tie</option>
                          <option value="Dress">Dress</option>
                          <option value="Bra">Bra</option>
                          <option value="Underwear">Underwear</option>
                          <option value="Swimsuit">Swimsuit</option>
                          <option value="Pajamas">Pajamas</option>
                          <option value="Gym sets">Gym sets</option>
                          <option value="Scarf">Scarf</option>
                          <option value="Hat/Cap">Hat/Cap</option>
                          <option value="Gloves">Gloves</option>
                          <option value="Socks">Socks</option>
                          <option value="Flip Flops/Slippers">Flip Flops/Slippers</option>
                          <option value="Shoes">Shoes</option>
                          <option value="Athletic Shoes">Athletic Shoes</option>
                          <option value="Boots">Boots</option>
                          <option value="Dress shoes">Dress shoes</option>
                          <option value="Sandals/high heels">Sandals/high heels</option>
                        </select>
                        <label>Clothing item category</label>
                    </div>
                    <div class="input-field col s6">
                        <label for="nameInput">Clothing item color and description:</label>
                        <input type="text" name="colorDescrip" id="colorDescrip" class="validate" data-length="32" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="nameInput">Place clothing item was bought: </label>
                        <input type="text" name="place" id="place" class="validate" data-length="32" required>
                    </div>
                    <div class="quantity input-field col s6">
                        <label for="quantityInput">Clothing item quantity:</label>
                        <input type="number" name="quantity" id="quantity" value=1 required>
                    </div>
                    <div class="input-field col s12">
                        <form action="#">
                            <div class="file-field input-field">
                                <span class="btn btn-file indigo">
                                    <i class="material-icons left">cloud_upload</i>
                                    Upload image of clothing item<input type="file">
                                </span>
                              <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                              </div>
                            </div>
                          </form>
                    </div> 
                    <div class="input-field col s8">
                        <button class="btn waves-effect waves-light cyan" type="submit">
                            <i class="material-icons right">send</i>
                            Submit
                        </button>
                    </div> 
                </div>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>

</body>

</html>