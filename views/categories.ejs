<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Closet Inventory</title>

    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@700&display=swap" rel="stylesheet">

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/categoriesStyle.css">

</head>

<body>
    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper purple">
                <a href="/" class="brand-logo">Closet Manager</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <!-- Main nav, hidden for small screens -->
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
                    <li><a href="/clothing"><i class="material-icons left">event_note</i>Closet Inventory</a></li>
                    <li><a href="/categories"><i class="material-icons left">dataset</i> Clothing Categories</a></li>
                    <% if (isLoggedIn) { %>
                        <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                        <li><a href="/logout" class="btn red">Logout</a></li>                        
                    <% } else { %>
                        <li><a href="/login" class="btn blue">Login</a></li>
                    <% } %>
                </ul>
            </div>
        </nav>
        <!-- Mobile nav menu, shown when menu button clicked -->
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
            <li><a href="/clothing"><i class="material-icons left">event_note</i>Inventory</a></li>
            <li><a href="/categories"><i class="material-icons left">dataset</i> Clothing Categories</a></li>
            <% if (isLoggedIn) { %>
                <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                <li><a href="/logout" class="btn red">Logout</a></li>                        
            <% } else { %>
                <li><a href="/login" class="btn blue">Login</a></li>
            <% } %>
        </ul>
    </header>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="list">
            <h1>Closet Categories:</h1>
            <table>
                <thead>
                    <tr>
                        <th>Your clothing categories:</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < categorieslist.length; i++) { %>
                    <tr>
                        <td><%= categorieslist[i].categoriesName %></td>
                        <td>
                            <a class="btn-large waves-effect waves-light indigo right" href="/categories/<%= categorieslist[i].categoriesID %>/delete">
                                <i class="material-icons right">delete</i>
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="add">
            <h2>Add a clothing category:</h2>
            <form id="addForm" method="post" action="/categories"> <!-- default action is the page's URL --> 
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" id="categoriesNameInput" name="categoriesName" class="validate" data-length="32" required>
                        <label for="categoriesNameInput">Category name:</label>
                    </div>
                </div>
                <button class="btn waves-effect waves-light cyan" type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script src="/scripts/materializeAutoInit.js"></script>

</body>

</html>