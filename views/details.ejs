<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Closet Inventory</title>

    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@700&display=swap" rel="stylesheet">

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/detailsStyle.css">

</head>

<body>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="stuffDetail">
            <h1>Clothing item details:</h1>
            <a class="btn-small waves-effect waves-light deep-purple" href="/clothing">
                <i class="material-icons left">arrow_back</i>Return to Inventory
            </a>
            <table>
                <tr>
                    <th>Category:</th>
                    <td><%= category %></td>
                </tr>
                <tr>
                    <th>Color and Description:</th>
                    <td><%= colorDescription %></td>

                </tr>
                <tr>
                    <th>Place bought:</th>
                    <td><%= placeBought %></td>
                </tr>
                <tr>
                    <th>Quantity:</th>
                    <td><%= quantity %></td>
                </tr>
                <tr>
                    <th>Image:</th>
                    <td>
                        <img src="/images/<%=id%>.jpg" alt="blackjeans">
                    </td>
                </tr>
                <tr>
                    <th>Description:</th>
                    <td><%= description %></td>
                </tr>
            </table>
        </div>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light cyan left modal-trigger" href="#stuffEdit">
                <i class="material-icons right">edit</i>
                Edit
            </a>
            <a class="btn-large waves-effect waves-light indigo right" href="/clothing/details/<%= id %>/delete">
                <i class="material-icons right">delete</i>
                Delete
            </a>
        </div>


        <div class="modal purple lighten-5" id="stuffEdit">

            <div class="modal-content">

                <h2>Edit clothing item:</h2>
                <form method="post" action="/clothing/details/<%= id%>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="nameInput">Clothing item color and description:</label>
                            <input type="text" name="colorDescrip" id="colorDescrip" class="validate" data-length="32" value = "<%= colorDescription%>" required>
                        </div>
                        <div class="input-field col s6">
                            <label for="nameInput">Place clothing item was bought: </label>
                            <input type="text" name="place" id="place" class="validate" data-length="32" value = "<%= placeBought%>" required>
                        </div>
                        <div class="quantity input-field col s6">
                            <label for="quantityInput">Clothing item quantity:</label>
                            <input type="number" name="quantity" id="quantity" value=<%= quantity%> required>
                        </div>
                        <div class="input-field col s12">
                            <div class="file-field input-field">
                                <span class="btn btn-file indigo">
                                    <i class="material-icons left">cloud_upload</i>
                                    Upload image of clothing item<input type="file">
                                </span>
                              <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                              </div>
                            </div>
                        </div>
                        <div class="input-field col s12">
                            <label for="descriptionInput">Description:</label>
                            <input type="text" name="description" id="description" data-length="100" value="<%= description%>">
                        </div>
                    </div>
                    
                    <div class="modal-footer purple lighten-5">
                        <button class="btn waves-effect waves-light cyan" type="submit">
                            <i class="material-icons right">send</i>
                            Submit
                        </button>
                        <button class="modal-close waves-effect waves-green btn-flat deep-purple white-text" type="cancel">
                            <i class="material-icons right">sentiment_neutral</i>
                            Never Mind
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>

</body>

</html>